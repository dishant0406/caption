{
  "name": "caption-api",
  "version": "1.0.0",
  "description": "WhatsApp Video Captioning Bot - Main API Service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:generate-env": "ts-node src/config/generate-env-example.ts"
  },
  "keywords": [
    "whatsapp",
    "video",
    "captioning",
    "api"
  ],
  "dependencies": {
    "@ai-sdk/azure": "^2.0.79",
    "@ai-sdk/openai": "^2.0.68",
    "@ai-sdk/provider": "^2.0.0",
    "ai": "^4.3.16",
    "@azure/storage-blob": "^12.29.1",
    "@caption/shared": "workspace:*",
    "@mastra/core": "^0.24.6",
    "@mastra/memory": "^0.15.12",
    "@mastra/pg": "^0.17.9",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "redis": "^5.9.0",
    "sequelize": "^6.37.7",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
