{
  "name": "video-worker",
  "version": "1.0.0",
  "description": "WhatsApp Video Captioning Bot - Video Processing Worker",
  "main": "dist/worker.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/worker.js",
    "dev": "nodemon src/worker.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "video",
    "processing",
    "ffmpeg",
    "whisper",
    "transcription"
  ],
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "@caption/shared": "workspace:*",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5",
    "openai": "^4.77.0",
    "redis": "^5.9.0",
    "uuid": "^11.1.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
