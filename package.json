{
  "name": "caption-bot",
  "version": "1.0.0",
  "private": true,
  "description": "WhatsApp Video Captioning Bot - Monorepo",
  "scripts": {
    "dev:api": "pnpm --filter caption-api dev",
    "dev:worker": "pnpm --filter video-worker dev",
    "dev": "pnpm -r --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:api": "pnpm --filter caption-api build",
    "build:worker": "pnpm --filter video-worker build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "format": "pnpm --filter \"./apps/*\" format",
    "clean": "rm -rf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": [
    "whatsapp",
    "video",
    "captioning",
    "whisper",
    "ffmpeg",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
